<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrugiFragment">

    <ImageView
        android:id="@+id/tvpower"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/poveroff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ImageView
        android:id="@+id/sbvolup"
        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/tvpower"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="96dp"
        android:src="@drawable/volumeup"
        app:layout_constraintEnd_toStartOf="@+id/tvchnext"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sbvoldown"
        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/tvpower"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/volumedown"
        app:layout_constraintEnd_toStartOf="@+id/tvchprev"
        app:layout_constraintTop_toBottomOf="@+id/sbvolup" />

    <ImageView
        android:id="@+id/tvchprev"
        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvchnext" />

    <ImageView
        android:id="@+id/tvchnext"
        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="84dp"
        android:src="@drawable/up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="253dp"
        android:layout_height="60dp"
        android:layout_marginBottom="116dp"
        android:text="BACK"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>